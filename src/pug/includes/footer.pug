block footer
    include ../icons/icon-coin.pug
    include ../icons/icon-list.pug
    include ../icons/icon-squares.pug

    footer.footer
        ul.footer__nav-list
            li.footer-nav-element(class=page === 'index' ? 'footer-nav-element_active' : '')
                a.footer-nav-element__link(href='./' class=page === 'index' ? 'footer-nav-element__link_active' : '')
                    +icon-list('footer-nav-element__icon')
                    span Клиенты
            li.footer-nav-element(class=page === 'partners' ? 'footer-nav-element_active' : '')
                a.footer-nav-element__link(href='./partners.html' class=page === 'partners' ? 'footer-nav-element__link_active' : '')
                    +icon-squares('footer-nav-element__icon')
                    span Партнёры
