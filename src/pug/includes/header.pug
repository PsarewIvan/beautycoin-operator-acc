block header

    include ../components/tooltip.pug
    include ../icons/icon-exit.pug
    include ../icons/icon-coin.pug
    include ../icons/icon-list.pug
    include ../icons/icon-squares.pug

    header.header
        .header__content
            a.header__logo(href='./')
                img(src='img/logo.svg')
            nav.nav
                ul.nav__list
                    li.nav-element(class=page === 'index' ? 'nav-element_active' : '')
                        a.nav-element__link(href='./' class=page === 'index' ? 'nav-element__link_active' : '')
                            +icon-list('nav-element__icon')
                            span Клиенты
                    li.nav-element(class=page === 'partners' ? 'nav-element_active' : '')
                        a.nav-element__link(href='./partners.html' class=page === 'partners' ? 'nav-element__link_active' : '')
                            +icon-squares('nav-element__icon')
                            span Партнёры
            .header__controls
                .header__email operator.name@company.ru
                button.button-icon.header__button.tooltip-trigger.js-tooltip-trigger
                    +icon-exit('header__button-icon')
                    +tooltip({text: 'Выйти из учетной записи'})
